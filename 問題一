for i in range (9):#10行
    if i%2==0:#看是偶數行還是奇數行
        for n in range (20):
            if n%2==0#看是偶數字還是奇數字
                print("*", end="")#如果是偶數字偶數行輸入"*"
            else:#看是偶數字還是奇數字
                print("+", end="")#如果是奇數字偶數行輸入"#"
    else:#看是偶數行還是奇數行
        for n in range (20):
            if n%2==0:#看是偶數字還是奇數字
                print("+", end="")#如果是偶數字奇數行輸入"#"
            else:#看是偶數字還是奇數字
                print("*", end="")#如果是奇數字奇數行輸入"*"
    print('\n')#換行

